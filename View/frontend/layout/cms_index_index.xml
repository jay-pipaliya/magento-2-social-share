<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="content">
            <block class="Mageplaza\SocialShare\Block\InlineDisplay" name="mp.SocialShare.InlineTop" template="Mageplaza_SocialShare::Inline.phtml" before="-">
                <arguments>
                    <argument name="page" xsi:type="string">home_page</argument>
                    <argument name="position" xsi:type="string">top_content</argument>
                </arguments>
            </block>
            <block class="Mageplaza\SocialShare\Block\InlineDisplay" name="mp.SocialShare.InlineBottom" template="Mageplaza_SocialShare::Inline.phtml" after="-">
                <arguments>
                    <argument name="page" xsi:type="string">home_page</argument>
                    <argument name="position" xsi:type="string">bottom_content</argument>
                </arguments>
            </block>
            <block class="Mageplaza\SocialShare\Block\FloatDisplay" name="mp.SocialShare.Float" template="Mageplaza_SocialShare::Float.phtml" after="-">
                <arguments>
                    <argument name="page" xsi:type="string">home_page</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
